<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Add WeChat related fields to Student entity.
    -->
    <changeSet id="20251014000000-1" author="system">
        <addColumn tableName="student">
            <column name="wechat_user_id" type="varchar(255)">
                <constraints nullable="true" unique="true" />
            </column>
            <column name="wechat_nickname" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="wechat_avatar" type="varchar(500)">
                <constraints nullable="true" />
            </column>
            <column name="wechat_signature" type="varchar(500)">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

