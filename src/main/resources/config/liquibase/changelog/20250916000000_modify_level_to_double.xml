<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog-ext.xsd">

    <!--
        Modify level column in question table from int to decimal to support floating point values.
    -->
    <changeSet id="20250916000000-1" author="jhipster">
        <modifyDataType
            tableName="question"
            columnName="level"
            newDataType="decimal(5,2)"/>
    </changeSet>

</databaseChangeLog>
