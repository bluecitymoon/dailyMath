<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Question.
    -->
    <changeSet id="20250831040235-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="question_category_id"
                                 baseTableName="question"
                                 constraintName="fk_question__question_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="question_category"
                                 />

        <addForeignKeyConstraint baseColumnNames="type_id"
                                 baseTableName="question"
                                 constraintName="fk_question__type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="question_type"
                                 />

        <addForeignKeyConstraint baseColumnNames="grade_id"
                                 baseTableName="question"
                                 constraintName="fk_question__grade_id"
                                 referencedColumnNames="id"
                                 referencedTableName="student_grade"
                                 />
    </changeSet>
</databaseChangeLog>
